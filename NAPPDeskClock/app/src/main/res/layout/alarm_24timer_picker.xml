<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <!-- android:background="@drawable/pickerbox_background" -->

    <com.android.deskclock.VerticalTextPicker
        android:id="@+id/timerpicker_hour"
        android:layout_width="80dip"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <TextView
        android:id="@+id/textpicktv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="40sp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/timerpicker_hour"/>

    <com.android.deskclock.VerticalTextPicker
        android:id="@+id/timerpicker_minute"
        android:layout_width="80dip"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/textpicktv"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>