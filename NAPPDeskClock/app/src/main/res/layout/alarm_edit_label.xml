<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/alarm_edit_labelbg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label"
        android:textColor="@color/white_labeltitle"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/label_edit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white_labeltitle"
        android:maxLines="1"
        android:maxLength="15"
        android:drawableBottom="@drawable/line"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/white_labeltext"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_edit_ko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_edit_ko"
            android:gravity="center"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white_labeltext"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/label_edit_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_edit_ok"
            android:gravity="center"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white_labeltext"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>