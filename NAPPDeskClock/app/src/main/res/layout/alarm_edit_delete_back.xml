<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/alarm_edit_labelbg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/labeltext_top_padding">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/delete_back_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_labeltitle"
        android:textSize="@dimen/alarm_title_size"
        android:singleLine="true"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_ok_ko_hight"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/delete_back_ko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_edit_ko"
            android:gravity="center"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white_labeltext"
            android:textSize="@dimen/label_ok_ko_font_size"/>
        <TextView
            android:id="@+id/delete_back_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_edit_ok"
            android:gravity="center"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white_labeltext"
            android:textSize="@dimen/label_ok_ko_font_size"/>
    </LinearLayout>
</LinearLayout>