<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/timer_alert_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="top|center"
        android:singleLine="true"
        android:text="@string/timer_alert_label"
        android:textColor="@color/alarm_time"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/timer_alert_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="top|center"
        android:textColor="@color/alarm_time"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="25dp"
        android:background="#cfd0d1" />

    <Button
        android:id="@+id/timer_alert_ok"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/timer_dialog_ok"
        android:textColor="@color/alarm_time"
        android:background="@drawable/button_selector"
        android:textSize="18sp" />

</LinearLayout>