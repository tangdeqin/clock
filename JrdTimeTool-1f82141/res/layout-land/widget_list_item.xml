<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation= "horizontal" >

    <LinearLayout
        android:id="@+id/widget_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/city_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="42px"
            android:layout_marginTop="23px"
            android:layout_marginRight="24px"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="48px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="42px"
            android:layout_marginRight="24px"
            android:layout_marginTop="22px"
            android:background="@drawable/line"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#ffffff"
                        android:textSize="84px" />

                    <TextView
                        android:id="@+id/am_pm_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8px"
                        android:textColor="#ffffff"
                        android:textSize="30px"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/date_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="42px"
                    android:textColor="#ffffff"
                    android:textSize="36px" />
            </LinearLayout>

            <ImageView
                android:id="@+id/day_night_icon_1"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24px"
                android:layout_marginTop="30px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/city_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="24px"
            android:layout_marginTop="23px"
            android:layout_marginRight="42px"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="48px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="24px"
            android:layout_marginTop="22px"
            android:layout_marginRight="42px"
            android:background="@drawable/line"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24px"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#ffffff"
                        android:textSize="84px" />

                    <TextView
                        android:id="@+id/am_pm_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8px"
                        android:textColor="#ffffff"
                        android:textSize="30px"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/date_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="42px"
                    android:textColor="#ffffff"
                    android:textSize="36px" />
            </LinearLayout>

            <ImageView
                android:id="@+id/day_night_icon_2"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="42px"
                android:layout_marginTop="30px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_item_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/city_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="292px"
            android:layout_marginTop="23px"
            android:layout_marginRight="292px"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="48px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="292px"
            android:layout_marginRight="292px"
            android:layout_marginTop="22px"
            android:background="@drawable/line"
            android:scaleType="fitXY" />

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="292px"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#ffffff"
                        android:textSize="84px" />

                    <TextView
                        android:id="@+id/am_pm_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8px"
                        android:textColor="#ffffff"
                        android:textSize="30px"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/date_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="42px"
                    android:textColor="#ffffff"
                    android:textSize="36px" />
            </LinearLayout>

            <ImageView
                android:id="@+id/day_night_icon_3"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="292px"
                android:layout_marginTop="30px" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
