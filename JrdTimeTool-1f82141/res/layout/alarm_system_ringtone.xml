<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_back"
     >

    <ListView
        android:id="@+id/system_ringtone_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@drawable/default_diver"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/system_ringtone_list_view_bottom"
        android:dividerHeight="0.5dp" />

    <LinearLayout
         android:id="@+id/system_ringtone_list_view_bottom"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/default_diver" />

        <LinearLayout
            android:id="@+id/btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
           >

            <Button
                android:id="@+id/cancle_button"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/default_diver" />

            <Button
                android:id="@+id/ok_button"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn_bg"
                android:text="@string/ok"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>